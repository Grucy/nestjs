{
  "name": "root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@nestjs/common": "^6.0.1",
    "@nestjs/core": "^6.0.1",
    "lodash": "^4.17.11",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/prompt": "^7.5.0",
    "@nestjs/testing": "^6.0.1",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.120",
    "@types/node": "^10.12.18",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "scripts": {
    "commit": "yarn run git-cz",
    "lerna:publish": "lerna run build && yarn test && lerna publish",
    "lerna:prerelease": "lerna run build && yarn test && lerna publish prerelease --preid rc",
    "build": "lerna run build",
    "clean": "rimraf packages/**/lib",
    "test": "jest",
    "travis": "yarn install && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn run prettier --write",
      "git add"
    ],
    "*.md": [
      "yarn run prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(t)sx?$": "ts-jest"
    },
    "projects": [
      "<rootDir>/packages/*"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.spec.json"
      }
    }
  },
  "version": "0.0.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
